<html lang="ru">
<head>
    {% include 'head.html.twig' %}
    <style>
        .main-page {
            width:100%;
            max-width: 950px;
            box-sizing: border-box;
            margin:0 auto;
            padding: 10px 60px;
            color: #212121;
        }

        .main-page__title {
            font: normal 2em Arial,sans-serif;
            font-weight: 700;
            margin: 5px 5px 25px;
            padding: 0;
        }

        .main-page__links-list {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .main-page__link {
            display: block;
            margin: 10px;
            padding: 10px;
            width: 100%;
            background-color: lightcoral;
            border: 1px solid #444444;
            border-radius: 8px;
            text-decoration: none;
            text-align: center;
            color: #212121;
        }
    </style>
</head>
<body>
<div class="main-page">
    <h1 class="main-page__title">{{ title }}</h1>

    <div class="main-page__links-list">
        {% for link in links %}
            <a class="main-page__link" href="{{ link.href }}">{{ link.text }}</a>
        {% endfor %}
    </div>
</div>
</body>
</html>
