<html lang="ru">
<head>
    {% include 'head.html.twig' %}
    <style>
        .logout-page {
            width:100%;
            max-width: 950px;
            box-sizing: border-box;
            margin:0 auto;
            padding: 10px 60px;
            color: #212121;
        }

        .logout-page__title {
            font: normal 2em Arial,sans-serif;
            font-weight: 700;
            margin: 5px 5px 25px;
            padding: 0;
        }

        .logout-page__subtitle {
            font: normal 1.75em Arial,sans-serif;
            font-weight: 700;
            margin: 5px 5px 25px;
            padding: 0;
        }

        .logout-page__link {
            display: block;
            margin: 10px;
            padding: 10px;
            width: 100%;
            background-color: lightcoral;
            border: 1px solid #444444;
            border-radius: 8px;
            text-decoration: none;
            text-align: center;
            color: #212121;
        }
    </style>
</head>
<body>
<div class="logout-page">
    <h1 class="logout-page__title">{{ title }}</h1>

    <h2 class="logout-page__subtitle">{{ subtitle }}</h2>

    <a class="logout-page__link" href="{{ link.href }}">{{ link.text }}</a>
</div>
</body>
</html>
